{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "playbookName": {
            "defaultValue": "sentinel-la-updateincident",
            "type": "string"
        },
        "sentinelResourceGroupName": {
            "defaultValue": "sentinelResourceGroupName",
            "type": "string"
        },
        "sentinelSubscriptionId": {
            "defaultValue": "subscription().subscriptionId",
            "type": "string"
        },
        "sentinelWorkspaceId": {
            "defaultValue": "sentinelWorkspaceId",
            "type": "string"
        },
        "UserName": {
            "defaultValue": "<username>@<domain>",
            "type": "string"
        }
    },
    "variables": {
        "AzureSentinelConnectionName": "[concat('azuresentinel-', parameters('playbookName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[variables('AzureSentinelConnectionName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "displayName": "[parameters('UserName')]",
                "customParameterValues": {},
                "api": {
                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
                }
            }
        },
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[parameters('playbookName')]",
            "location": "westeurope",
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        },
                        "sentinelResourceGroupName": {
                            "defaultValue": "[parameters('sentinelResourceGroupName')]",
                            "type": "String"
                        },
                        "sentinelSubscriptionId": {
                            "defaultValue": "[parameters('sentinelSubscriptionId')]",
                            "type": "String"
                        },
                        "sentinelWorkspaceId": {
                            "defaultValue": "[parameters('sentinelWorkspaceId')]",
                            "type": "String"
                        }
                    },
                    "triggers": {
                        "manual": {
                            "type": "Request",
                            "kind": "Http",
                            "inputs": {
                                "schema": {
                                    "properties": {
                                        "details": {
                                            "properties": {
                                                "caseId": {
                                                    "type": "integer"
                                                },
                                                "status": {
                                                    "type": "string"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "object": {
                                            "properties": {
                                                "customFields": {
                                                    "properties": {
                                                        "URLStruct": {
                                                            "properties": {
                                                                "incidentURL": {
                                                                    "type": "string"
                                                                }
                                                            },
                                                            "type": "object"
                                                        },
                                                        "alertStruct": {
                                                            "properties": {
                                                                "alertIDs": {
                                                                    "type": "string"
                                                                }
                                                            },
                                                            "type": "object"
                                                        },
                                                        "numberStruct": {
                                                            "properties": {
                                                                "incidentNumber": {
                                                                    "type": "integer"
                                                                }
                                                            },
                                                            "type": "object"
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "description": {
                                                    "type": "string"
                                                },
                                                "owner": {
                                                    "type": "string"
                                                },
                                                "resolutionStatus": {
                                                    "type": "string"
                                                },
                                                "resolutionSummary": {
                                                    "type": "string"
                                                },
                                                "severity": {
                                                    "type": "integer"
                                                },
                                                "source": {
                                                    "type": "string"
                                                },
                                                "title": {
                                                    "type": "string"
                                                },
                                                "tlp": {
                                                    "type": "integer"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "objectId": {
                                            "type": "string"
                                        },
                                        "objectType": {
                                            "type": "string"
                                        },
                                        "operation": {
                                            "type": "string"
                                        },
                                        "organization": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "actions": {
                        "Change_incident_status_to_InProgess": {
                            "runAfter": {},
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "put",
                                "path": "/Case/@{encodeURIComponent(parameters('sentinelSubscriptionId'))}/@{encodeURIComponent(parameters('sentinelWorkspaceId'))}/@{encodeURIComponent(parameters('sentinelResourceGroupName'))}/@{encodeURIComponent('Incident')}/@{encodeURIComponent(triggerBody()?['object']?['customFields']?['numberStruct']?['incidentNumber'])}/Status/@{encodeURIComponent('InProgress')}"
                            }
                        },
                        "Success_Response": {
                            "runAfter": {
                                "Change_incident_status_to_InProgess": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Response",
                            "kind": "Http",
                            "inputs": {
                                "body": {
                                    "message": "Sentinel incident @{triggerBody()?['object']?['customFields']?['numberStruct']?['incidentNumber']} status has been set to InProgess"
                                },
                                "statusCode": 200
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "azuresentinel": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]",
                                "connectionName": "[variables('AzureSentinelConnectionName')]",
                                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
                            }
                        }
                    }
                }
            }
        }
    ]
}